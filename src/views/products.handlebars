<div class="product-list">
  {{#each products}}
    <div class="product-card">
      <div class="product-card__image">
        <img src="{{this.thumbnail}}" alt="{{this.name}}" />
      </div>
      <div class="product-card__info">
        <h4>{{this.title}}</h4>
        <p class="description">{{this.description}}</p>
        <p class="price">{}</p>
        <p class="stock">Available: {}</p>
        <p class="code">Product Code: {{this.code}}</p>
        <p class="id">ID: {{this.id}}</p>
        <button id="addProductBtn">Agregar al carrito</button>
      

      </div>
    </div>
  {{/each}}
  {{#if hasPrevPage}}
    <a href="/products?page={{prevPage}}"><button class="pagination-button">Previous</button></a>
  {{/if}}
  {{#if hasNextPage}}
    <a href="/products?page={{nextPage}}"><button class="pagination-button">Next</button></a>
  {{/if}}
</div>