<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6">
      <h1 class="text-center mb-4"><i class="bi bi-box-arrow-in-right" aria-hidden="true"></i> Ingresar nueva contraseña</h1>
      <form id="newpassword-form">
        <input type="hidden" id="token" name="token">
        <input type="hidden" id="email" name="email">
        <div class="mb-3">
          <label class="form-label" for="code"><i class="bi bi-envelope-fill" aria-hidden="true"></i> Codigo de recuperación:</label>
          <input type="text" id="code" name="code" class="form-control" required>
        </div>
        <div class="mb-3">
          <label class="form-label" for="password"><i class="bi bi-lock-fill" aria-hidden="true"></i> Nueva contraseña:</label>
          <input type="password" id="password" name="password" class="form-control" required>
        </div>
        <div class="mb-3">
          <label class="form-label" for="confirm_password"><i class="bi bi-lock-fill" aria-hidden="true"></i> Confirmar nueva contraseña:</label>
          <input type="password" id="confirm_password" name="confirm_password" class="form-control" required>
        </div>
        <button type="submit" class="btn btn-primary w-100 mb-3"><i class="bi bi-box-arrow-in-right" aria-hidden="true"></i> Ingresar nueva contraseña</button>
      </form>
      <p class="text-center">¿Not registered? <a href="/register"><i class="bi bi-person-plus-fill" aria-hidden="true"></i> Regístrate aquí.</a></p>
    </div>
  </div>
</div>

<script>
  // Populate the token and email fields from the URL parameters
  const urlParams = new URLSearchParams(window.location.search);
  const token = urlParams.get('token');
  const email = urlParams.get('email');
  document.getElementById('token').value = token;
  document.getElementById('email').value = email;
</script>

<script src="/js/newPassword.js"></script>
