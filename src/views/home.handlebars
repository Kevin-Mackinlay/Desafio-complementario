<section class="hero">
    <h1>Welcome to Our Mobile Store!</h1>
    <p>Explore our wide range of mobile devices and accessories.</p>
</section>

<section class="featured-products">
    <h2>Featured Phones</h2>
    <div class="product-grid">
        {{#each featuredProducts}}
        <div class="product-card">
            <img src="{{this.image}}" alt="{{this.name}}" class="product-image">
            <div class="product-info">
                <h3>{{this.name}}</h3>
                <p>{{this.description}}</p>
                <p class="product-price">$ {{this.price}}</p>
                <a href="/products/{{this.id}}" class="btn btn-primary">View Details</a>
            </div>
        </div>
        {{/each}}
    </div>
</section>

<section class="about-us">
    <h2>About Us</h2>
    <p>Learn more about our commitment to quality and service.</p>
    <a href="/about" class="btn btn-secondary">More About Us</a>
</section>
